                                <input type="text" maxlength="80" class="form-control" id="inputSuccess2">

                                <div class="res_error">Повторите новый пароль</div>
                            </div>
                            <div class="col-md-12 res_settingssecurity_btn">
                                <div class="row">
                                    <div class="col-md-3">
                                        <button type="button" type_btn="res_password"
                                                class="btn res_password res-button-yellow res-button-big res-button-full">
                                            Сохранить
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
